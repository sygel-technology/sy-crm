<odoo>
    <record id="crm_autoassign_stage_form" model="ir.ui.view">
        <field name="name">crm.autoassign.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position='after'>
                <field name="allow_autoassign"/>
            </xpath>
        </field>
    </record>
</odoo>
